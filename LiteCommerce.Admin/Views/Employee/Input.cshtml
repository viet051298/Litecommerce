@model LiteCommerce.DomainModels.Employee
@{

}
<div class="box box-primary">
    <div class="box-body">
        <div class="box-header with-border">
            <h3 class="box-title">@ViewBag.Title</h3>
        </div>
        <!-- form start -->
        <!--<form role="form" action="~/Employee/Input" method="post">-->
        @using (Html.BeginForm("Input", "Employee", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="box-header text-right">
                <a href="~/Employee">Back to list</a>
            </div>
            <div class="box-body">
                <input type="hidden" name="EmployeeID" value="@Model.EmployeeID" />
                <div class="form-group row">
                    <div class="col-md-6">
                        <label for="">First Name</label>
                        <input type="text" class="form-control" id="" placeholder="Enter first name"
                               name="FirstName" value="@Model.FirstName">
                        @Html.ValidationMessage("FirstName", new { @style = "color : red;" })
                    </div>
                    <div class="col-md-6">
                        <label for="">Last Name</label>
                        <input type="text" class="form-control" id="" placeholder="Enter last name"
                               name="LastName" value="@Model.LastName">
                        @Html.ValidationMessage("LastName", new { @style = "color : red;" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <label for="">Title</label>
                        <select class="form-control" name="Title">
                            <option>-- Choose Title --</option>
                            @foreach (var item in SelectListHelper.ListOfTitle())
                            {
                                if (item.Value == Model.Title)
                                {
                                    <option value="@item.Value" selected>@item.Text</option>
                                }
                                else
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                        </select>
                        @Html.ValidationMessage("Title", new { @style = "color : red;" })
                    </div>
                    <div class="col-md-6">
                        <label for="">Email</label>
                        <input type="text" class="form-control" id="" placeholder="Enter email"
                               name="Email" value="@Model.Email">
                        @Html.ValidationMessage("Email", new { @style = "color : red;" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <label for="">Birth Date</label>
                        <input class="form-control" type="date" name="BirthDate"
                               value="@string.Format("{0:yyyy-MM-dd}", Model.BirthDate)" id="">
                        @Html.ValidationMessage("BirthDate", new { @style = "color : red;" })
                    </div>
                    <div class="col-md-6">
                        <label for="">Hire Date</label>
                        <input class="form-control" type="date" name="HireDate"
                               value="@string.Format("{0:yyyy-MM-dd}", Model.HireDate)" id="">
                        @Html.ValidationMessage("HireDate", new { @style = "color : red;" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <label for="">Country</label>
                        @Html.DropDownListFor(m => m.Country, SelectListHelper.ListOfCountry(),
                                    new { @class = "form-control"})
                        @Html.ValidationMessage("Country", new { @style = "color : red;" })
                    </div>
                    <div class="col-md-6">
                        <label for="">City</label>
                        <input type="text" class="form-control" id="" name="City" value="@Model.City" placeholder="Enter City">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <label for="">Address</label>
                        <input type="text" class="form-control" id="" placeholder="Enter address"
                               name="Address" value="@Model.Address">
                    </div>
                    <div class="col-md-6">
                        <label for="">Home Phone</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-phone"></i>
                            </div>
                            <input type="tel" class="form-control" data-inputmask="'mask': ['999-999-9999 [x99999]', '+099 99 99 9999[9]-9999']"
                                   name="HomePhone" value="@Model.HomePhone" data-mask="">
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <label for="">Password</label>
                        <input type="password" class="form-control" id="" name="Password" value="@Model.Password" placeholder="Enter Pass">
                        @Html.ValidationMessage("Password", new { @style = "color : red;" })
                    </div>
                    <div class="col-md-6">
                        <label for="">Photo</label>
                        <input type="file" id="" name="uploadPhoto" required>
                        @Html.ValidationMessage("PhotoPath", new { @style = "color : red;" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="">Notes</label>
                    <textarea class="form-control" id="" placeholder="Desciption" name="Notes"></textarea>
                </div>
                <!-- /.box-body -->

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a href="~/Employee" class="btn btn-default">Cancer</a>
                </div>
            </div>
        }
            <!--</form>-->
        </div>
</div>

