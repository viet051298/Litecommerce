@model LiteCommerce.DomainModels.UserAccount
@{
   
}
<div class="container" style="margin: 7% auto;">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="text-center">
                        <h3><i class="fa fa-lock fa-4x"></i></h3>
                        <h2 class="text-center">Change Password</h2>
                        <div class="panel-body">
                            <form action="~/Account/ChangePwd" role="form" class="form" method="post">
                                <div class="form-group">
                                    <div class="input-group" style="    width: 100%;">
                                        <input id="" name="Pass" class="form-control" type="password" placeholder="Enter Old Password"
                                               value="">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group" style="    width: 100%;">
                                        <input id="newPass" name="newPass" class="form-control" type="password" placeholder="Enter New Password">
                                    </div>
                                    @Html.ValidationMessage("NewPass", new { @style = "color : red;" })
                                </div>
                                <div class="form-group">
                                    <div class="input-group" style="    width: 100%;">
                                        <input id="reNewPass" name="reNewPass" class="form-control" type="password" placeholder="Re Enter Password">
                                    </div>
                                    @Html.ValidationMessage("ReNewPass", new { @style = "color : red;" })
                                </div>
                                @Html.ValidationMessage("Pass", new { @style = "color : red;" })
                                <div class="form-group row">
                                    <div class="col-md-6">
                                        <a href="~/Dashboard" class="btn btn-lg btn-danger btn-block">Cancer</a>
                                    </div>
                                    <div class="col-md-6">
                                        <input class="btn btn-lg btn-primary btn-block" value="Change Password" type="submit">
                                    </div>
                                </div>

                                <input type="hidden" class="hide" name="token" id="token" value="">
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
