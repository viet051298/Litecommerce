@model LiteCommerce.DomainModels.Shipper
@{

}
<div class="box box-primary">
    <div class="box-body">
        <div class="box-header with-border">
            <h3 class="box-title">@ViewBag.Title</h3>
        </div>
        <!-- form start -->
        <form role="form" action="~/Shipper/Input" method="post">
            <div class="box-header text-right">
                <a href="~/Shipper">Back to list</a>
            </div>
            <div class="box-body">
                <input type="hidden" name="ShipperID" value="@Model.ShipperID" />
                <div class="form-group">
                    <label for="">Company Name</label>
                    <input type="text" class="form-control" id="" placeholder="Enter company name"
                           value="@Model.CompanyName" name="CompanyName">
                    @Html.ValidationMessage("CompanyName", new { @style = "color : red;" })
                </div>

                <div class="form-group">
                    <label for="">Phone</label>
                    <input type="text" class="form-control" id="" placeholder="Enter phone"
                           value="@Model.Phone" name="Phone">
                </div>
            </div>
            <!-- /.box-body -->

            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Save</button>
                <a href="~/Shipper" class="btn btn-default">Cancer</a>
            </div>
        </form>
    </div>
</div>

